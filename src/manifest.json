{
	"name": "Extra Roblox Features",
	"version": "0.1",
	"description": "Does stuff.",

	"background": {
		"scripts": [
			"/Libraries/jquery-3.4.0.min.js",

			"/Constants/Functions.js",
			"/Constants/Web APIs.js",

			"Background.js"
		],
		"persistent": false
	},

	"content_scripts": [
		{
			"matches": [
				"*://*.roblox.com/*"
			],

			"js": [
				"/Libraries/jquery-3.4.0.min.js",

				"/Constants/Functions.js",
				"/Constants/HTML Templates.js",

				"/Libraries/Event.js",
				"/Libraries/Observer.js",

				"/Features/Catalog.js",
				"/Features/Library.js",
				"/Features/GameStore.js",
				"/Features/GamePass.js",

				"Event Handler.js",
				"Index.js"
			]
		}
	],

	"permissions": [
		"tabs",
		"cookies",
		"*://*.roblox.com/*"
	],

	"manifest_version": 2
}
